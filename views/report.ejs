<!DOCTYPE html>
<html lang="pt-br" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Report - Trabalho1 - Disciplina IA</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style media="screen">
    * {
      font-family: "Roboto", "Helvetica", "Arial", sans-serif;
      box-sizing: border-box;
      line-height: 1.43;
      letter-spacing: 0.01071em;
    }

    a {
      text-decoration: none;
    }

    html {
      box-sizing: border-box;
      -webkit-font-smoothing: antialiased;
    }

    body {
      padding: 10px;
      margin: 0;
    }

    .menu {
      list-style: none;
      margin: 0;
      padding: 0;
    }

    .menu li {
      display: inline-block;
      padding: 6px;
      border: 1px solid #DDD;
      border-radius: 2px;
      margin-right: 4px;
      border-bottom: 0;
      text-transform: capitalize;
    }

    article {
      position: relative;
    }

    section {
      position: absolute;
      padding: 10px;
      border: 1px solid #DDD;
      border-radius: 2px;
      background: #fbfbfb;
      width: 97vw;
      z-index: 0;
    }

    section {
      visibility: hidden;
    }

    /* Target cria a referência do elemento clicado */
    section:target {
      z-index: 2;
      visibility: visible;
    }

    h1 {
      text-transform: capitalize;
      border-bottom: 2px solid #ddd;
      padding: 5px;
      margin: 0;
    }

    h2 {
      text-transform: capitalize;
      border-bottom: 1px solid #ddd;
      padding: 5px;
      margin: 0;
    }

    table {
      margin: 10px auto;
      border: 2px solid black;
      border-collapse: collapse;
      max-width: 800px;
    }

    table thead tr {
      color: white;
      background-color: #777;
      border-bottom: 1px solid #ddd;
    }

    table thead tr th {
      padding: 10px;
    }

    table thead tr th:not(:last-child) {
      border-right: 1px solid black;
    }

    table tbody tr td {
      padding: 5px;
      background-color: #fff;
    }

    table tbody tr td:not(:last-child) {
      border-right: 1px solid black;
    }

    .capitalize {
      text-transform: capitalize;
    }

    .horizontal-list {
      display: flex;
      flex-direction: row;
      position: relative;
      width: 100%;
      flex-wrap: wrap;
      justify-content: space-between;
      justify-items: center;
    }

    .container {
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
      margin-bottom: 11px;
      background-color: #fff;
      box-shadow: 2px 2px 5px #ddd;
    }

    .execucoes>.grafico {
      height: auto;
      width: 47%;
      padding: 2px;
    }

    .execucoes>.grafico img {
      position: relative;
      display: block;
      width: 100%;
      height: 100%;
    }

    .table-responsive{
      overflow-x: auto;
      margin-bottom: 11px;
    }

    @media screen and (max-width: 860px) {
      .horizontal-list{
        flex-direction: column !important;
      }
      .execucoes>.grafico {
        height: auto;
        width: 100%;
        padding: 2px;
      }
    }
  </style>
</head>

<body>


  <main>
    <ul class="menu">
      <% for(let problema of this.problemas){ %>
      <li><a href="#<%=problema%>"><%=problema%></a></li>
      <% } %>

    </ul>

    <article>

      <% for(let problema of this.problemas){ %>
      <section id="<%=problema%>">
        <h1><%=problema%></h1>

        <div class="table-responsive">
          <table>
            <thead>
              <tr>
                <th>Algoritmo</th>
                <th>Max</th>
                <th>Min</th>
                <th>Média</th>
                <th>Desvio Padrão</th>
              </tr>
            </thead>
            <tbody>
              <% for(let data of this[problema].estatisticas){ %>
              <tr>
                <td class="capitalize"><%= data.algoritmo %></td>
                <td><%= data.pior %></td>
                <td><%= data.melhor %></td>
                <td><%= data.media %></td>
                <td><%= data.desvioPadrao %></td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>


        <div class="container">
          <h2>Execuções</h2>
          <div class="horizontal-list execucoes">
            <% for(let algoritmo in this[problema].algoritmos){ %>
            <div class="grafico">
              <img src="<%= this[problema].algoritmos[algoritmo].graficos.currents %>" alt="">
            </div>
            <% } %>
          </div>
        </div>

        <div class="container">
          <h2>Média Execuções</h2>
          <div class="horizontal-list execucoes">
            <% for(let algoritmo in this[problema].algoritmos){ %>
            <div class="grafico">
              <img src="<%= this[problema].algoritmos[algoritmo].graficos['mean-current'] %>" alt="">
            </div>
            <% } %>
          </div>
        </div>

        <div class="container">
          <h2>Melhores</h2>
          <div class="horizontal-list execucoes">
            <% for(let algoritmo in this[problema].algoritmos){ %>
            <div class="grafico">
              <img src="<%= this[problema].algoritmos[algoritmo].graficos.bests %>" alt="">
            </div>
            <% } %>
          </div>
        </div>

        <div class="container">
          <h2>Média Melhores</h2>
          <div class="horizontal-list execucoes">
            <% for(let algoritmo in this[problema].algoritmos){ %>
            <div class="grafico">
              <img src="<%= this[problema].algoritmos[algoritmo].graficos['mean-best'] %>" alt="">
            </div>
            <% } %>
          </div>
        </div>




      </section>
      <% } %>



    </article>
  </main>


</body>

</html>
