<!DOCTYPE html>
<html lang="pt-br" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Report - Trabalho1 - Disciplina IA</title>
  <style media="screen">
    body {
      padding: 10px;
      margin: 0;
    }

    .menu {
      list-style: none;
      margin: 0;
      padding: 0;
    }

    .menu li {
      display: inline-block;
      padding: 6px;
      border: 1px solid #DDD;
      border-radius: 2px;
      margin-right: 4px;
      border-bottom: 0;
    }

    article {
      position: relative;
    }

    section {
      position: absolute;
      padding: 8px;
      border: 1px solid #DDD;
      border-radius: 2px;
      background: #fbfbfb;
      width: 97vw;
      z-index: 0;
    }

    section {
      visibility: hidden;
    }

    /* Target cria a referência do elemento clicado */
    section:target {
      z-index: 2;
      visibility: visible;
    }

    h1 {
      text-transform: capitalize;
      border-bottom: 2px solid #ddd;
      padding: 5px;
      margin: 0;
    }

    h2 {
      text-transform: capitalize;
      padding: 5px;
      margin: 0;
    }

    table {
      margin: 10px auto;
      border: 2px solid black;
      border-collapse: collapse;
      max-width: 800px;
      min-width: 800px;
    }

    table thead tr {
      color: white;
      background-color: #777;
    }

    table thead tr th {
      padding: 10px;
    }

    table thead tr th:not(:last-child) {
      border-right: 1px solid black;
    }

    table tbody tr td {
      padding: 5px;
    }

    table tbody tr td:not(:last-child) {
      border-right: 1px solid black;
    }

    .capitalize {
      text-transform: capitalize;
    }

    .horizontal-list {
      display: flex;
      flex-direction: row;
      position: relative;
      width: 100%;
      flex-wrap: wrap;
      justify-content: space-between;
      justify-items: center;
    }

    .container {
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
      margin-bottom: 5px;
      background-color: #fff;
    }

    .execucoes > .grafico {
      height: auto;
      width: 47%;
      padding: 2px;
    }

    .execucoes > .grafico img {
      position: relative;
      display: block;
      width: 100%;
      height: 100%;
    }


  </style>
</head>

<body>


  <main>
    <ul class="menu">
      <% for(let problema of this.problemas){ %>
      <li><a href="#<%=problema%>"><%=problema%></a></li>
      <% } %>

    </ul>

    <article>

      <% for(let problema of this.problemas){ %>
      <section id="<%=problema%>">
        <h1><%=problema%></h1>

        <table>
          <thead>
            <tr>
              <th>Algoritmo</th>
              <th>Max</th>
              <th>Min</th>
              <th>Média</th>
              <th>Desvio Padrão</th>
            </tr>
          </thead>
          <tbody>
            <% for(let data of this[problema].estatisticas){ %>
            <tr>
              <td class="capitalize"><%= data.algoritmo %></td>
              <td><%= data.pior %></td>
              <td><%= data.melhor %></td>
              <td><%= data.media %></td>
              <td><%= data.desvioPadrao %></td>
            </tr>
            <% } %>
          </tbody>
        </table>

        <div class="container">
          <h2>Execuções</h2>
          <div class="horizontal-list execucoes" >
            <% for(let algoritmo in this[problema].algoritmos){ %>
            <div class="grafico">
              <img src="<%= this[problema].algoritmos[algoritmo].graficos.currents %>" alt="">
            </div>
            <% } %>
          </div>
        </div>

        <div class="container">
          <h2>Média Execuções</h2>
          <div class="horizontal-list execucoes" >
            <% for(let algoritmo in this[problema].algoritmos){ %>
            <div class="grafico">
              <img src="<%= this[problema].algoritmos[algoritmo].graficos['mean-current'] %>" alt="">
            </div>
            <% } %>
          </div>
        </div>

        <div class="container">
          <h2>Melhores</h2>
          <div class="horizontal-list execucoes" >
            <% for(let algoritmo in this[problema].algoritmos){ %>
            <div class="grafico">
              <img src="<%= this[problema].algoritmos[algoritmo].graficos.bests %>" alt="">
            </div>
            <% } %>
          </div>
        </div>

        <div class="container">
          <h2>Média Melhores</h2>
          <div class="horizontal-list execucoes">
            <% for(let algoritmo in this[problema].algoritmos){ %>
            <div class="grafico">
              <img src="<%= this[problema].algoritmos[algoritmo].graficos['mean-best'] %>" alt="">
            </div>
            <% } %>
          </div>
        </div>




      </section>
      <% } %>



    </article>
  </main>


</body>

</html>
